html
    head
        style
            include ../movie.css
        title Advanced Search
    body
        div#header
            include ../partial/header
        div#search
            include ../partial/searchbar
        div#main

            h1 Advanced Search for Movies

            .searchpage
                form(action="/search" method="POST")

                    //-Labels and Text Bars
                    table
                        tr
                            td #[label(for="") Title]
                            td #[input(type="text" id="searchtitle" name="searchtitle")]
                        tr
                            td #[label(for="") Released Year] 
                            td #[input(type="text" id="searchyear" name="searchyear")]
                        tr
                            td #[label(for="") Genre]
                            td #[input(type="text" id="searchgenre" name="searchgenre")]
                        tr
                            td #[label(for="") Actor]
                            td #[input(type="text" id="searchactor" name="searchactor")]
                        tr
                            td #[label(for="") Director]
                            td #[input(type="text" id="searchdirector" name="searchdirector")]
                        tr
                            td #[label(for="") Writer]
                            td #[input(type="text" id="searchwriter" name="searchwriter")]
                    label(for="") 

                    //-Search Button (Goes to a Search Result page)
                    button(type="submit" id="search_button") Search Movie

                    
            h1 Advanced Search for People
            .searchpage
                form(action="/search" method="POST")

                    //-Labels and Text Bars
                    table
                        tr
                            td #[label(for="") Person Name]
                            td #[input(type="text" id="searchbyperson" name="searchbyperson")]
                    label(for="") 

                    //-Search Button (Goes to a Search Result page)
                    button(type="submit" id="search_button") Search Person


        include ../partial/footer


