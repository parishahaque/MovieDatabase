html
    head
        style
            include ../movie.css
        title Sign In
    body
        div#header
            include ../partial/header
        div#search
            include ../partial/searchbar
        div#main

            //-Sign In
            h1 SIGN IN
            //- box containing the items
            .login
                form(action="/signin" method="POST")
                    table
                        tr
                            td #[label(for="") Username:]
                            //- username textbar
                            td #[input(type="text" id="username" name="username" value="" autofocus required)]
                        tr
                            //- password textbar  
                            |
                            td #[label(for="") Password:]
                            td #[input(type="password" id="password" name="password" value="" autofocus required)]
                    |
                    label(for="") 
                    //- sign in button (Go to Profile page)
                    button(type="submit" id="signin_button") Sign In

            //- Create Account Button (Go to profile page)
            form(action="/register" method="GET")
                p Don't have an account? 
                    button(type="submit" id="create_acc_button") Create Account
        include ../partial/footer


